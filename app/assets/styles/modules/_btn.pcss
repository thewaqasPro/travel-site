.btn {
    color: #ffffff;
    display: inline-block;
    padding: 0.75rem 1.2rem;
    text-decoration: none;
    border-radius: .25rem;
    background-color: $mainBlue;
    
    

    &--orange {
        background-color: $mainOrange;
    }

    &--large {
        padding: 1.1rem 1.9rem;

        @mixin atSmall {
            font-size: 1.25rem;
        }

    }
    
}