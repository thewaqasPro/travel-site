.reveal-item {
    opacity: 0;
    transform: translateY(25px);
    -webkit-transition: opacity 1.5s ease-out, transform 1s ease-out;
    -moz-transition: opacity 1.5s ease-out, transform 1s ease-out;
    -o-transition: opacity 1.5s ease-out, transform 1s ease-out;
    transition: opacity 1.5s ease-out, transform 1s ease-out;

    &--is-visible {
        opacity: 1;
        transform: translateY(0);
    }
}